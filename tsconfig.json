{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es2016",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@commands/*": ["src/commands/*"],
            "@db/*": ["src/db/*"]
        }
    },
    "include": ["src/**/*", "tests/**/*"]
}
